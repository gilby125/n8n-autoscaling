## Autoscaling
COMPOSE_PROJECT_NAME=n8n-autoscaling
COMPOSE_FILE_PATH=/app/docker-compose.yml
GENERIC_TIMEZONE=America/New_York
# Deployment mode: 'compose' for standalone Docker Compose, 'swarm' for Dockploy/Docker Swarm
DEPLOYMENT_MODE=compose
MIN_REPLICAS=1
MAX_REPLICAS=5
SCALE_UP_QUEUE_THRESHOLD=5
SCALE_DOWN_QUEUE_THRESHOLD=1
POLLING_INTERVAL_SECONDS=10
COOLDOWN_PERIOD_SECONDS=10
POLL_INTERVAL_SECONDS=5
N8N_QUEUE_BULL_GRACEFULSHUTDOWNTIMEOUT=300
N8N_GRACEFUL_SHUTDOWN_TIMEOUT=300

## Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
QUEUE_NAME_PREFIX=bull
QUEUE_NAME=jobs
QUEUE_BULL_REDIS_HOST=redis
QUEUE_HEALTH_CHECK_ACTIVE=true

## Postgres
POSTGRES_HOST=postgres
POSTGRES_DB=n8n
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOURPASSWORD # Change this to a strong password
PGDATA=/var/lib/postgresql/data/pgdata
DB_TYPE=postgresdb

## N8N
# Change yourdomain.com to your actual domain
N8N_HOST=n8n.yourdomain.com
N8N_WEBHOOK=n8n-webhook.yourdomain.com
N8N_WEBHOOK_URL=https://n8n-webhook.yourdomain.com
WEBHOOK_URL=https://n8n-webhook.yourdomain.com
N8N_EDITOR_BASE_URL=https://n8n.yourdomain.com
N8N_PROTOCOL=https
N8N_PORT=5678
N8N_DIAGNOSTICS_ENABLED=false
N8N_USER_FOLDER=/n8n/main
N8N_SECURE_COOKIE=false
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=false
N8N_ENCRYPTION_KEY=YOURKEY # 32 characters MAKE YOUR OWN KEY
N8N_USER_MANAGEMENT_JWT_SECRET=YOURKEY # Change this to a strong password
N8N_WORKER_SERVICE_NAME=n8n-worker
EXECUTIONS_MODE=queue
OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true
N8N_TASK_BROKER_URL=http://n8n:5679
N8N_COMMAND_RESPONSE_URL=http://n8n:5679
N8N_TASK_BROKER_PORT=5679
N8N_RUNNERS_AUTH_TOKEN=YOURPASSWORD # Change this to a strong password
NODE_FUNCTION_ALLOW_EXTERNAL=ajv,ajv-formats,puppeteer,ffmpeg,git,graphicsmagick,openssh-client
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
N8N_DATA_TABLES_MAX_SIZE_BYTES=1048576000  # 1GB in bytes, adjust as needed

## Cloudflare Tunnel
# Optional for Dockploy deployment (Dockploy uses Traefik + Cloudflare DNS)
# Required for standalone deployment if using cloudflared
CLOUDFLARE_TUNNEL_TOKEN=YOURTOKEN

## Tailscale
TAILSCALE_IP=
# Change this to your Tailscale IP OPTIONAL BUT RECOMMENDED

## Security (Dockploy only)
# REQUIRED: IP whitelist for n8n UI access (webhooks remain publicly accessible)
# Format: Single IP (1.2.3.4), CIDR (1.2.3.0/24), or multiple IPs comma-separated (1.2.3.4,5.6.7.8)
# Deployment will FAIL if this is not set. Set to your IP address(es) only.
ALLOWED_IPS=